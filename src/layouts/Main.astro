---
import "../styles/base.css";
import LeftSidebar from "../components/LeftSidebar.astro";
import MDTOC from "../components/MDTOC.astro";
const BASE_URL = import.meta.env.BASE_URL;

const title = Astro.props.title || Astro.props.frontmatter.title;
const toc = Astro.props.toc || Astro.props.frontmatter.toc;
---

<html lang="en" class="h-full">
	<head>
		<meta name="viewport" content="width=device-width" />

		<link rel="apple-touch-icon" sizes="180x180" href={`${BASE_URL}assets/apple-touch-icon.png`}>
		<link rel="icon" type="image/png" sizes="32x32" href={`${BASE_URL}assets/favicon-32x32.png`}>
		<link rel="icon" type="image/png" sizes="16x16" href={`${BASE_URL}assets/favicon-16x16.png`}>
		<link rel="manifest" href={`${BASE_URL}assets/site.webmanifest`}>
		<link rel="mask-icon" href={`${BASE_URL}assets/safari-pinned-tab.svg`} color="#5bbad5">
		<link rel="shortcut icon" href={`${BASE_URL}assets/favicon.ico`}>
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="msapplication-config" content={`${BASE_URL}assets/browserconfig.xml`}>
		<meta name="theme-color" content="#ffffff">

		<meta name="title" content={`FLLNL | ${title}`}>
		<meta name="description" content="Official website of the FIRST LEGO League Newfoundland & Labrador">
		<meta name="keywords" content="lego, first, robotics, newfoundland">
		<meta name="robots" content="index, follow">
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
		<meta name="language" content="English">

		<title>FLLNL | {title}</title>
	</head>
	<body class="h-full bg-blue-900">
		<main
			class="h-full w-11/12 xl:w-5/6 2xl:w-9/12 m-auto flex flex-col md:flex-row"
		>
			<LeftSidebar />
			<div
				class="py-5 px-4 w-full md:w-9/12 h-auto overflow-y-visible md:overflow-y-auto bg-neutral-50"
			>
				<div class="grid grid-cols-1 lg:grid-cols-3">
					<div class="lg:order-last md:order-start">
						{toc ? <MDTOC headings={Astro.props.headings}/> : null}
					</div>
					<article class="lg:col-span-2 prose max-w-prose prose-neutral page">
						<slot />
					</article>
				</div>
			</div>
		</main>
	</body>
</html>
